server:
  port: 666
  error:
    path: /error
  whitelabel:
    enabled: false
  
spring:
  application:
    name: Bootstrap Thymeleaf Spring Boot Security
  thymeleaf:
    cache: false
    enabled: true
    prefix: classpath:/templates/
    suffix: .html
    
  #Once we include H2 dependency, 
  #Spring Boot auto-detects it and sets up our persistence with no need for extra configuration, other than the data source properties:
  datasource:
    driver-class-name: org.h2.Driver
    url: jdbc:h2:mem:bootapp;DB_CLOSE_DELAY=-1
    username: sa
    password: 

#Once the spring-boot-starter-security dependency on the classpath of the application – Basic Authentication is enabled by default.  
security:
  basic:
    enabled: false
  #If we don’t specify credentials explicitly – a default username will be used and password will be randomly generated by Boot at startup.
  user:
    name: rico
    password: 666  